{
    "branches": [
        "master"
    ],
    "tagFormat": "v${version}",
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "conventionalcommits"
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "presetConfig": {
                    "types": [
                        {
                            "type": "feat",
                            "section": "Added"
                        },
                        {
                            "type": "fix",
                            "section": "Fixed"
                        },
                        {
                            "type": "perf",
                            "section": "Fixed"
                        },
                        {
                            "type": "refactor",
                            "hidden": true
                        },
                        {
                            "type": "chore",
                            "hidden": true
                        },
                        {
                            "type": "docs",
                            "hidden": true
                        },
                        {
                            "type": "test",
                            "hidden": true
                        },
                        {
                            "type": "ci",
                            "hidden": true
                        }
                    ]
                }
            }
        ],
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "node scripts/update-changelog.js \"${nextRelease.notes}\" && jq '.version=\"${nextRelease.version}\"' custom_components/duux/manifest.json > tmp.json && mv tmp.json custom_components/duux/manifest.json"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "CHANGELOG.md",
                    "custom_components/duux/manifest.json"
                ],
                "message": "chore(release): ${nextRelease.version}"
            }
        ],
        "@semantic-release/github"
    ]
}