{
  "branches": [
    "+([0-9])?(.{+([0-9]),x}).x",
    "master",
    "main",
    {
      "name": "beta",
      "prerelease": true
    },
    {
      "name": "alpha",
      "prerelease": true
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "section": "Added",
              "type": "feat"
            },
            {
              "section": "Fixed",
              "type": "fix"
            },
            {
              "section": "Fixed",
              "type": "perf"
            },
            {
              "hidden": true,
              "type": "refactor"
            },
            {
              "hidden": true,
              "type": "chore"
            },
            {
              "hidden": true,
              "type": "docs"
            },
            {
              "hidden": true,
              "type": "test"
            },
            {
              "hidden": true,
              "type": "ci"
            }
          ]
        }
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node scripts/update-changelog.js \"${nextRelease.notes}\" && jq '.version=\"${nextRelease.version}\"' custom_components/duux/manifest.json > tmp.json && mv tmp.json custom_components/duux/manifest.json"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "custom_components/duux/manifest.json"
        ]
      }
    ],
    "@semantic-release/github"
  ],
  "tagFormat": "v${version}"
}